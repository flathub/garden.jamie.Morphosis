{
    "id" : "garden.jamie.Morphosis",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "46",
    "sdk" : "org.gnome.Sdk",
    "command" : "morphosis",
    "finish-args" : [
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "pandoc",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 bin/pandoc ${FLATPAK_DEST}/bin/pandoc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.2/pandoc-3.2-linux-amd64.tar.gz",
                    "sha256": "ea3f96dde56ae1577c81184694b8576d8efec52e168ce49a6e7df1441f428289",
                    "only-arches": ["x86_64"]
                },
                {
                    "type": "archive",
                    "url": "https://github.com/jgm/pandoc/releases/download/3.2/pandoc-3.2-linux-arm64.tar.gz",
                    "sha256": "93d6c414e5994e254aec840be8428016a70167c835ca3227378217937bd9a01a",
                    "only-arches": ["aarch64"]
                }
            ]
        },
        {
            "name": "blueprint-compiler",
            "buildsystem": "meson",
            "cleanup": ["*"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
                    "tag": "v0.12.0"
                }
            ]
        },
        {
            "name" : "morphosis",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/Monster/morphosis.git",
                    "tag": "v1.2",
                    "commit": "a159d1f32da503d6ac7464e9cfd14b4ac2c5a9df"
                }
            ]
        }
    ]
}
